<ReservoirMonitor>:
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "Monitorar Reservatórios"
            left_action_items: [["arrow-left", lambda x: app.go_back_to_pre_splash()]]
            md_bg_color: 0, 0, 0, 1 
        
        MDBoxLayout:
            orientation: 'horizontal'
            padding: "10dp"
            spacing: "10dp"
            size_hint_y: None  # Remove o tamanho relativo
            height: "400dp"  # Define uma altura maior para aumentar o tamanho dos itens internos
            
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5  # Controle o tamanho horizontal (50% da largura)
                MDLabel:
                    text: "Ração"
                    halign: 'center'
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: "300dp"  # Aumenta a altura da barra de nível
                    canvas:
                        Color:
                            rgba: 0.7, 0.6, 0.6, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size[0], self.size[1] * (root.food_level / 100)
                    MDLabel:
                        text: f"{root.food_level}%"
                        halign: 'center'
                        pos_hint: {'center_y': 0.1}
                
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5  # Controle o tamanho horizontal (50% da largura)
                MDLabel:
                    text: "Água"
                    halign: 'center'
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: "300dp"  # Aumenta a altura da barra de nível
                    canvas:
                        Color:
                            rgba: 0.5, 0.8, 0.9, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size[0], self.size[1] * (root.water_level / 100)
                    MDLabel:
                        text: f"{root.water_level}%"
                        halign: 'center'
                        pos_hint: {'center_y': 0.1}

        # Bottom Navigation
        MDBottomNavigation:
            panel_color: 1, 1, 1, 1
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:                
                text: 'Home'
                icon: 'home'
                on_tab_press: app.switch_screen('home_screen')               

            MDBottomNavigationItem:                
                text: 'Vacina'
                icon: 'needle'
                on_tab_press: app.switch_screen('vacinas')

            MDBottomNavigationItem:                
                text: 'Registros'
                icon: 'file-document'
                on_tab_press: app.switch_screen('registro_alimentacoes')

            MDBottomNavigationItem:                
                text: 'Monitor'
                icon: 'chart-line'
                on_tab_press: app.switch_screen('reservoir_monitor')

            MDBottomNavigationItem:
                text: 'Histórico'
                icon: 'chart-bar'
                on_tab_press: app.switch_screen('reservoir_monitor')

            MDBottomNavigationItem:                
                text: 'Config'
                icon: 'cog-outline'
                on_tab_press: app.switch_screen('config')
