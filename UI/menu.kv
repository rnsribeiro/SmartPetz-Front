<MenuScreen>:
    name: "menu_screen"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1

        MDLabel:
            text: "Menu"
            font_size: "28sp"
            font_name: r"./Fonts/Poppins/Poppins-SemiBold.ttf"
            color: 120/255, 120/255, 120/255, 1
            halign: "center"  # Alinha o texto horizontalmente no centro
            size_hint_y: None  # Remove o tamanho padrão em y para ajustar manualmente
            height: self.texture_size[1]  # Ajusta a altura com base no texto
            pos_hint: {"center_x": .5, "top": .95}  # Centraliza horizontalmente e ajusta a posição no topo

        ScrollView:
            size_hint: 1, 0.7
            pos_hint: {"center_x": .5, "center_y": .45}

            MDGridLayout:
                cols: 1
                adaptive_height: True
                spacing: dp(10)
                padding: dp(10)

                MDRaisedButton:
                    text: "Login"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.switch_screen('login')                

                MDRaisedButton:
                    text: "Home"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.switch_screen('home_screen')

                MDRaisedButton:
                    text: "Reservatório"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.switch_screen('reservoir_monitor')

                MDRaisedButton:
                    text: "Dispenser"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.switch_screen('cadastrar_dispenser')

                MDRaisedButton:
                    text: "Cadastrar Usuário"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.switch_screen('registrar_usuario')                

                MDRaisedButton:
                    text: "Configurar IP"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.switch_screen('configurar_ip')


                MDRaisedButton:
                    text: "Sair"
                    md_bg_color: 0, 0, 0, 1  # Fundo preto
                    text_color: 1, 1, 1, 1
                    size_hint: 0.6, None
                    height: dp(50)
                    on_release: app.sair_do_app()
