<CadastrarVacinaScreen>:
    name: 'cadastrar_vacina'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 1, 1, 1, 1

        MDTopAppBar:
            title: "Cadastrar Vacina"
            elevation: 4
            md_bg_color: 0, 0, 0, 1
            left_action_items: [["arrow-left", lambda x: app.switch_screen('vacinas')]]

        # Selecionar animal
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(60)
            padding: dp(10)

            MDDropDownItem:
                id: animal_dropdown
                text: "Selecione um animal"
                on_release: root.open_animal_dropdown()

        # Nome da vacina
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            MDTextField:
                id: nome_vacina
                hint_text: "Nome da vacina"
                required: True

        # Data de aplicação
        MDBoxLayout:
            orientation: 'vertical'
            padding: dp(10)
            MDTextField:
                id: data_aplicacao
                hint_text: "Data de aplicação (DD-MM-YYYY)"
                required: True

         # Botão para navegar para a tela de cadastro de vacinas
        MDFillRoundFlatButton:
            text: "Salvar"
            pos_hint: {"center_x": 0.5}
            size_hint_y: None
            height: dp(50)
            on_release: root.salvar_vacina()
            md_bg_color: 0, 0, 0, 1
            text_color: 1, 1, 1, 1

        # Espaço entre o ScrollView e o botão
        MDBoxLayout:
            size_hint_y: None
            height: dp(15)

        # Bottom Navigation
        MDBottomNavigation:
            panel_color: 1, 1, 1, 1
            text_color_active: 0, 0, 0, 1

            MDBottomNavigationItem:
                id: nav_home
                text: 'Home'
                icon: 'home'
                on_tab_press: app.switch_screen('home_screen')

            MDBottomNavigationItem:
                id: nav_vacina
                text: 'Vacina'
                icon: 'needle'
                on_tab_press: app.switch_screen('vacinas')

            MDBottomNavigationItem:
                id: nav_registros
                text: 'Registros'
                icon: 'file-document'
                on_tab_press: app.switch_screen('registro_alimentacoes')

            MDBottomNavigationItem:
                id: nav_monitor
                text: 'Monitor'
                icon: 'chart-line'
                on_tab_press: app.switch_screen('reservoir_monitor')

            MDBottomNavigationItem:
                id: nav_historico
                text: 'Histórico'
                icon: 'chart-bar'
                on_tab_press: app.switch_screen('reservoir_monitor')

            MDBottomNavigationItem:
                id: nav_config
                text: 'Config'
                icon: 'cog-outline'
                on_tab_press: app.switch_screen('config')
